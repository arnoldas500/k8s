#working execute python file with env set in dockerfile 
apiVersion: v1
kind: Pod
metadata:
  name: clouds
spec:
  containers:
  - args:
    - nvidia-smi
    image: akurbanovas/od_tf1:v1
    name: clouds
    command: ['python3', '/yourpath/file.py']
    volumeMounts:
    - name: raid
      mountPath: /raid
      readOnly: false
    ports:
    - containerPort: 8890
    resources:
      limits:
        nvidia.com/gpu: "1"
  volumes:
    - name: raid
      hostPath:
        path: /raid
  dnsPolicy: ClusterFirst
  restartPolicy: Never
